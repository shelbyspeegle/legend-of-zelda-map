{
  "compilerOptions": {
    "outDir": "./dist/",
    "noImplicitAny": true,
    "sourceMap": true,
    "module": "es6",
    "target": "es5",
    "allowJs": true,
    "moduleResolution": "node",

    // Allow import x from 'x' vs import * as x from 'x'
    "allowSyntheticDefaultImports": true,
    "esModuleInterop" : true
  }
}